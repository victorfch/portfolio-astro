---
const PROJECTS = [
  {
    title: "Omnifood",
    description: "Web creada en curso de SCSS",
    link: "https://omnifood-css-course.netlify.app",
    tags: ["HTML", "CSS", "JS"],
    image: "/projects/omnifood.webp",
  },
  {
    title: "Card register",
    description:
      "Un bonito formulario para rellenar la informaciÃ³n de la tarjeta",
    link: "https://delightful-biscotti.netlify.app/",
    tags: ["HTML", "TAILWIND", "ASTRO", "REACT"],
    image: "/projects/card-form.webp",
  },
];
---

{
  PROJECTS.map(({ title, description, link, tags, image }) => (
    <article class="mb-4">
      <a href={link} target="_blank">
        <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-x-2 mb-2">
          {tags.map((tag) => (
            <li class="rounded-full text-xs py-1 px-2">{tag}</li>
          ))}
        </ul>
        <figure class="overflow-hidden rounded shadow-2xl shadow-white/5 opacity-75">
          <img
            class=" hover:scale-105 transition"
            src={image}
            alt={`Captura de pantalla de ${image}`}
          />
        </figure>
      </a>
    </article>
  ))
}
