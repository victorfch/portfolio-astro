---
const { certifications } = Astro.props;
---

<div class="flex flex-col gap-2">
  {
    certifications.map((cert) => (
      <div class="mb-2">
        <h3 class="text-blue-800 dark:text-sky-200/80">{cert.title}</h3>
        <a
          href={cert.link}
          target="_blank"
          class="text-cyan-800 dark:text-yellow-400 underline"
        >
          {cert.platform}
        </a>
      </div>
    ))
  }
</div>
